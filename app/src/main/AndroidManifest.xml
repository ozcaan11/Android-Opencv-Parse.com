<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ozcan.com.design8december3">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.Camera2"
        android:required="true" />

    <application
        android:name=".ForParseInit"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".BodySelectionActivity"
            android:label="Ben Takip Uygulaması">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity"
            android:label="Yeni Kullanıcı Kaydı"/>
        <activity android:name=".LoginActivity"
            android:label="Giriş Yapın"/>
        <activity android:name=".CameraActivity"
            android:label="Resim Seçin"/>
        <activity android:name=".BodySelectionBackActivity"
            android:label="Ben Takip Uygulaması"/>
        <activity android:name=".ReportActivity"
            android:label="Analiz Sonuçları"/>
    </application>

</manifest>
